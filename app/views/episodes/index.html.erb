<div class="content-options-container">

  <div class ="content-options-title">
    <h1> Episodes Index </h1>
  </div>

  <div class="content-options">

    <div class="content-option">
      <%= form_with url: "/episodes?exact_match_search=", method: :get, local: true do |form|%>

        <span class="search-bar-description">Exact Title Search:</span><br><br><%= form.text_field :exact_match_search%>

        <br></br>

        <%= form.submit "Exact Title Search",class: "sort-button"%>

      <% end %>
    </div>

    <div class="content-option">
      <%= form_with url: "/episodes?partial_match_search=", method: :get, local: true do |form|%>

        <span class="search-bar-description">Partial Title Search</span><br><br><%= form.text_field :partial_match_search%>

        <br></br>

        <%= form.submit "Partial Title Search",class: "sort-button"%>

      <% end %>
    </div>

  </div>

</div>

<div id="episode-index-box">
  <% @episodes.each_with_index do |episode,index| %>

    <div class="content-box">

      <div id="episode-<%=index+1%>">

        <p class = "content-title"><%= episode.title %> </p>

        <p> <%= episode.time_format%> </p>

        <p>Marked explicit: <%= episode.marked_explicit%> </p>

        <span><%= link_to "Edit", "/episodes/#{episode.id}/edit", class: 'edit-button'%></span>
        <span><%= link_to "Delete","/episodes/#{episode.id}/delete",class:"delete-button"%></span>

      </div>

    </div>

  <% end %>
</div>